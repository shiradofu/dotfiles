root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[*.{php,ron}]
indent_size = 4

[karabiner.json]
indent_size = 4

[config/gh/config.yml]
indent_size = 4

[{Makefile,*.mak}]
indent_style = tab
